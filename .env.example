# ================================
# AI_XANDRIA - Environment Variables
# ================================

# ----------------
# General
# ----------------
NODE_ENV=development
APP_NAME=AI_XANDRIA
APP_URL=http://localhost:3000

# ----------------
# Database (PostgreSQL)
# ----------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_xandria
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_xandria
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# ----------------
# Redis Cache
# ----------------
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ----------------
# AWS (Bedrock AI)
# ----------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Bedrock Models
BEDROCK_TEXT_MODEL=anthropic.claude-3-5-sonnet-20240620-v1:0
BEDROCK_IMAGE_MODEL=amazon.titan-image-generator-v1
BEDROCK_EVAL_MODEL=anthropic.claude-3-haiku-20240307-v1:0

# ----------------
# Solana Blockchain
# ----------------
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Program IDs (update after deployment)
PERSONA_NFT_PROGRAM_ID=
MARKETPLACE_PROGRAM_ID=
BATTLE_ARENA_PROGRAM_ID=

# ----------------
# Storage (S3 + Arweave)
# ----------------
S3_BUCKET=ai-xandria-avatars
S3_REGION=us-east-1
ARWEAVE_WALLET_PATH=./arweave-wallet.json

# ----------------
# API Configuration
# ----------------
API_PORT=3001
API_PREFIX=/api/v1
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_EXPIRATION=7d

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# ----------------
# Frontend (Next.js)
# ----------------
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_APP_NAME=AI_XANDRIA
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ----------------
# Pricing Configuration
# ----------------
PLATFORM_FEE_PERCENTAGE=10
CREATOR_ROYALTY_PERCENTAGE=2.5
MARKETPLACE_FEE_PERCENTAGE=2.5

# Cost Markup (for calculating mint price)
COST_MARKUP_MULTIPLIER=1.5

# ----------------
# Battle Configuration
# ----------------
CASUAL_BATTLE_RATING_WIN=30
CASUAL_BATTLE_RATING_LOSS=20
RANKED_BATTLE_ENTRY_FEE=0.5
RANKED_BATTLE_COOLDOWN_DAYS=30
DEATHMATCH_ENTRY_FEE=2.0

# ----------------
# BullMQ (Job Queue)
# ----------------
QUEUE_REDIS_URL=redis://localhost:6379

# ----------------
# Monitoring
# ----------------
ENABLE_METRICS=true
METRICS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ----------------
# Email (Optional)
# ----------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@aixandria.io

# ----------------
# External APIs
# ----------------
# CoinGecko (for SOL price)
COINGECKO_API_KEY=

# ----------------
# Feature Flags
# ----------------
ENABLE_DEATHMATCH_MODE=true
ENABLE_CHAT_FEATURE=false
ENABLE_RENTAL_FEATURE=false

# ----------------
# Security
# ----------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Session
SESSION_SECRET=your_session_secret_here_min_32_chars
SESSION_MAX_AGE=86400000

# ----------------
# Development
# ----------------
LOG_LEVEL=debug
ENABLE_QUERY_LOGGING=true
